{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_structure_utils/json_schemas/1.0/cat_pdb",
    "title": "Class to concat two PDB structures in a single PDB file.",
    "type": "object",
    "required": [
        "input_structure1",
        "input_structure2",
        "output_structure_path"
    ],
    "properties": {
        "input_structure1": {
            "type": "string",
            "description": "Input structure 1 file path.",
            "enum": [
                ".*\\.pdb$"
            ]
        },
        "input_structure2": {
            "type": "string",
            "description": "Input structure 2 file path.",
            "enum": [
                ".*\\.pdb$"
            ]
        },
        "output_structure_path": {
            "type": "string",
            "description": "Output protein file path.",
            "enum": [
                ".*\\.pdb$"
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "remove_tmp": {
                    "type": "boolean",
                    "default": true,
                    "description": "[WF property] Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": false,
                    "description": "[WF property] Do not execute if output files exist."
                }
            }
        }
    },
    "additionalProperties": false
}