{
    "_id": "biobb_structure_utils",
    "desc" : "Biobb_structure_utils is the Biobb module collection to modify or extract information from a PDB structure file.", 
    "github" : "https://github.com/bioexcel/biobb_structure_utils", 
    "readthedocs" : "https://biobb-structure-utils.readthedocs.io/en/latest/", 
    "conda" : "https://anaconda.org/bioconda/biobb_structure_utils", 
    "docker" : "https://quay.io/repository/biocontainers/biobb_structure_utils", 
    "singularity" : "https://singularity-hub.org/collections/3836/usage", 
    "version" : "3.0.0",
    "tools" : [
        {
            "block" : "StrCheckAddHydrogens", 
            "tool" : "in house", 
            "desc" : "Class to add hydrogens to a 3D structure.",
            "exec" : "str_check_add_hydrogens",
            "docs": "https://biobb-structure-utils.readthedocs.io/en/latest/utils.html#utils-str-check-add-hydrogens-module"
        }, 
        {
            "block" : "CatPDB", 
            "tool" : "in house", 
            "desc" : "Class to concat two PDB structures in a single PDB file.",
            "exec" : "cat_pdb",
            "docs": "https://biobb-structure-utils.readthedocs.io/en/latest/utils.html#module-utils.cat_pdb"
        }, 
        {
            "block" : "ExtractAtoms", 
            "tool" : "in house", 
            "desc" : "Class to extract atoms from a 3D structure.",
            "exec" : "extract_atoms",
            "docs": "https://biobb-structure-utils.readthedocs.io/en/latest/utils.html#module-utils.extract_atoms"
        },
        {
            "block" : "ExtractChain", 
            "tool" : "in house", 
            "desc" : "Class to extract a chain from a 3D structure.",
            "exec" : "extract_chain",
            "docs": "https://biobb-structure-utils.readthedocs.io/en/latest/utils.html#module-utils.extract_chain"
        }, 
        {
            "block" : "ExtractHeteroAtoms", 
            "tool" : "in house using biopython", 
            "desc" : "Class to extract hetero-atoms from a 3D structure.",
            "exec" : "extract_heteroatoms",
            "docs": "https://biobb-structure-utils.readthedocs.io/en/latest/utils.html#module-utils.extract_heteroatoms"
        }, 
        {
            "block" : "ExtractModel", 
            "tool" : "in house", 
            "desc" : "Class to extract a model from a 3D structure.",
            "exec" : "extract_model",
            "docs": "https://biobb-structure-utils.readthedocs.io/en/latest/utils.html#module-utils.extract_model"
        }, 
        {
            "block" : "ExtractProtein", 
            "tool" : "in house", 
            "desc" : "Class to extract a protein from a 3D structure.",
            "exec" : "extract_protein",
            "docs": "https://biobb-structure-utils.readthedocs.io/en/latest/utils.html#module-utils.extract_protein"
        }, 
        {
            "block" : "RemoveLigand", 
            "tool" : "in house", 
            "desc" : "Class to remove the selected ligand atoms from a 3D structure.",
            "exec" : "remove_ligand",
            "docs": "https://biobb-structure-utils.readthedocs.io/en/latest/utils.html#module-utils.remove_ligand"
        },
        {
            "block" : "RemovePdbWater", 
            "tool" : "in house", 
            "desc" : "Class to remove water molecules from PDB 3D structures.",
            "exec" : "remove_pdb_water",
            "docs": "https://biobb-structure-utils.readthedocs.io/en/latest/utils.html#module-utils.remove_pdb_water"
        }, 
        {
            "block" : "RenumberStructure", 
            "tool" : "in house", 
            "desc" : "Class to renumber atomic indexes from a 3D structure.",
            "exec" : "renumber_structure",
            "docs": "https://biobb-structure-utils.readthedocs.io/en/latest/utils.html#module-utils.renumber_structure"
        },
        {
            "block" : "SortGroResidues", 
            "tool" : "in house", 
            "desc" : "Class to sort the selected residues from a GRO 3D structure.",
            "exec" : "sort_gro_residues",
            "docs": "https://biobb-structure-utils.readthedocs.io/en/latest/utils.html#module-utils.sort_gro_residues"
        }
    ],
    "dep_pypi" : [
        "install_requires=['biobb_common==3.0.0', 'biobb_structure_checking==3.0.2']", 
        "python_requires='==3.7.*'"
    ], 
    "dep_conda" : [
        "python ==3.7.*", 
        "biobb_common ==3.0.0",
        "biobb_structure_checking ==3.0.2"
    ],
    "dep_conda_extra" : [
    ], 
    "keywords" : [
        "structure", 
        "protein", 
        "heteroatom", 
        "biopython"
    ]
}