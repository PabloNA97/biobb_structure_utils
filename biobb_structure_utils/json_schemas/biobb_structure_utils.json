{
    "_id": "biobb_structure_utils",
    "desc" : "Biobb_structure_utils is the Biobb module collection to modify or extract information from a PDB structure file.", 
    "github" : "https://github.com/bioexcel/biobb_structure_utils", 
    "readthedocs" : "https://biobb-structure-utils.readthedocs.io/en/latest/", 
    "conda" : "https://anaconda.org/bioconda/biobb_structure_utils", 
    "docker" : "https://hub.docker.com/r/mmbirb/biobb_structure_utils", 
    "singularity" : "https://singularity-hub.org/collections/3836", 
    "version" : "2.0.0",
    "tools" : [
        {
            "block" : "CatPDB", 
            "tool" : "in house", 
            "desc" : "Class to concat two PDB structures in a single PDB file."
        }, 
        {
            "block" : "ExtractAtoms", 
            "tool" : "in house", 
            "desc" : "Class to extract atoms from a 3D structure."
        },
        {
            "block" : "ExtractChain", 
            "tool" : "in house", 
            "desc" : "Class to extract a chain from a 3D structure."
        }, 
        {
            "block" : "ExtractHeteroAtoms", 
            "tool" : "in house using biopython", 
            "desc" : "Class to extract hetero-atoms from a 3D structure."
        }, 
        {
            "block" : "ExtractModel", 
            "tool" : "in house", 
            "desc" : "Class to extract a model from a 3D structure."
        }, 
        {
            "block" : "ExtractProtein", 
            "tool" : "in house", 
            "desc" : "Class to extract a protein from a 3D structure."
        }, 
        {
            "block" : "RemoveLigand", 
            "tool" : "in house", 
            "desc" : "Class to remove the selected ligand atoms from a 3D structure."
        },
        {
            "block" : "RemovePdbWater", 
            "tool" : "in house", 
            "desc" : "Class to remove water molecules from PDB 3D structures."
        }, 
        {
            "block" : "RenumberStructure", 
            "tool" : "in house", 
            "desc" : "Class to renumber atomic indexes from a 3D structure."
        },
        {
            "block" : "SortGroResidues", 
            "tool" : "in house", 
            "desc" : "Class to sort the selected residues from a GRO 3D structure."
        }
    ],
    "dep_pypi" : [
        "install_requires=['biobb_common==2.0.1', 'biobb_structure_checking==1.0.6']", 
        "python_requires='==3.6.*'"
    ], 
    "dep_conda" : [
        "python ==3.6.*", 
        "biobb_common ==2.0.1",
        "biobb_structure_checking ==1.0.6"
    ],
    "dep_conda_extra" : [
    ], 
    "keywords" : [
        "structure", 
        "protein", 
        "heteroatom", 
        "biopython"
    ]
}