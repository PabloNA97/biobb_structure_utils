{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_structure_utils/json_schemas/1.0/remove_ligand",
    "name": "biobb_structure_utils RemoveLigand",
    "title": "Class to remove the selected ligand atoms from a 3D structure.",
    "description": "Remove the selected ligand atoms from a 3D structure.",
    "type": "object",
    "info": {
        "wrapped_software": {
            "name": "In house",
            "license": "Apache-2.0"
        },
        "ontology": {
            "name": "EDAM",
            "schema": "http://edamontology.org/EDAM.owl"
        }
    },
    "required": [
        "input_structure_path",
        "output_structure_path"
    ],
    "properties": {
        "input_structure_path": {
            "type": "string",
            "description": "Input structure file path",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_structure_utils/raw/master/biobb_structure_utils/test/data/utils/WT_aq4_md_1.pdb",
            "enum": [
                ".*\\.pdb$",
                ".*\\.gro$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.pdb$",
                    "description": "Input structure file path",
                    "edam": "format_1476"
                },
                {
                    "extension": ".*\\.gro$",
                    "description": "Input structure file path",
                    "edam": "format_2033"
                }
            ]
        },
        "output_structure_path": {
            "type": "string",
            "description": "Output structure file path",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_structure_utils/raw/master/biobb_structure_utils/test/reference/utils/WT_apo_md_1.pdb",
            "enum": [
                ".*\\.pdb$",
                ".*\\.gro$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.pdb$",
                    "description": "Output structure file path",
                    "edam": "format_1476"
                },
                {
                    "extension": ".*\\.gro$",
                    "description": "Output structure file path",
                    "edam": "format_2033"
                }
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "ligand": {
                    "type": "string",
                    "default": "AQ4",
                    "wf_prop": false,
                    "description": "Residue code of the ligand to be removed."
                },
                "remove_tmp": {
                    "type": "boolean",
                    "default": true,
                    "wf_prop": true,
                    "description": "Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": false,
                    "wf_prop": true,
                    "description": "Do not execute if output files exist."
                },
                "sandbox_path": {
                    "type": "string",
                    "default": "./",
                    "wf_prop": true,
                    "description": "Parent path to the sandbox directory."
                }
            }
        }
    },
    "additionalProperties": false
}